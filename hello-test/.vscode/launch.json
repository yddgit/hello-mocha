    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeArgs": [
                "--nolazy"
            ],
            "program": "${workspaceFolder}/hello.js",
            "stopOnEntry": false,
            "console": "internalConsole",
            "sourceMaps": false,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "env": {
                "NODE_ENV": "test"
            },
            "runtimeArgs": [
                "--nolazy"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "stopOnEntry": false,
            "console": "internalConsole",
            "sourceMaps": false,
        },
    ]
}